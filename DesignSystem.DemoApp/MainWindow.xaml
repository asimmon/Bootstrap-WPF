<Window x:Class="DesignSystem.DemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesignSystem.DemoApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Something" Margin="10" />
        <Button Content="Something" Margin="10" IsEnabled="False" />

        <Button Content="Something" Margin="10" Style="{StaticResource ButtonMediumPrimaryStyle}" />
        <Button Content="Something" Margin="10" Style="{StaticResource ButtonMediumPrimaryStyle}" IsEnabled="False" />
        
        <Button Content="Something" Margin="10" Style="{StaticResource LinkButtonMediumDefaultStyle}" />
        <Button Content="Something" Margin="10" Style="{StaticResource LinkButtonMediumPrimaryStyle}" />
    </StackPanel>
</Window>
