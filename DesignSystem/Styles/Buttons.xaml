    <Style x:Key="ButtonLargeDefaultStyle" TargetType="{x:Type Button}">
        <Style.BasedOn>
            <ds:MergedStyle Style1="{StaticResource ButtonMediumDefaultStyle}" Style2="{StaticResource _PartialButtonLarge}" />
